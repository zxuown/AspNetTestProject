@model List<NewsItem>
<div class="container">
		<div class="row mt-5">
			<div class="col-md-6">
				<h1>News</h1>
				<a class="btn btn-outline-primary mt-5 mb-5" href="/News/Create">Create</a>
				<div>
					<table class="table table-hover table-bordered">
						<thead>
							<tr>
								<th>Id</th>
								<th>Header</th>
								<th>Image</th>
								<th>Date</th>
								<th>ShortText</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
						@foreach (var news in Model)
						{
									<tr>
									<td>@news.Id</td>
									<td>@news.Header</td>
									<td>
									@if (@news.Image != null)
									{
									<img class="img-thumbnail"src="@news.FullUrl"/>
									}
									</td>
										<td >@news.Date</td>
										<td>@news.ShortText</td>
									<td>
											<td>
												<div class="d-flex">
																<a class="btn btn-outline-primary" href="/News/Edit/@news.Id">Edit</a>
																		<form method="post" action="/News/Delete/@news.Id">
														<button class="btn btn-outline-warning">Delete</button>
													</form>
												</div>

											</td>
										</tr>
						}
						</tbody>
					</table>

				</div>
			</div>
		</div>
	</div>