@{
    
}
@model AboutMe
@{
	ViewData["Title"] = "Edit Ability";
	Layout = "_Layout"; // Specify the layout template
}
	<div class="container">
		<div class="row mt-5">
			<div class="col-md-6">
				<h1>Abilities</h1>
				<a class="btn btn-outline-primary mt-5 mb-5" href="/Me/Create">Create</a>
				<div>
					<div class="badge bg-success">@Model.Name</div>
					<div class="badge bg-success">@Model.SecondName</div>
					<div class="badge bg-success">@Model.Age</div>
					<table class="table table-hover table-bordered">
						<thead>
							<tr>
								<th>Id</th>
								<th>Image</th>
								<th>Name</th>
								<th style="width: 100px">Level</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							@foreach (var abilities in Model.Abilities)
							{
									<tr>
											<td>@abilities.Id</td>
											<td>
												@if(@abilities.Image != null)
												{
													<img class="img-thumbnail"src="@abilities.FullUrl"/>
												}
											</td>
												<td style="text-align: center">@abilities.Name</td>
												<td>
											<div class="progress">
		  <div class="progress-bar progress-bar-striped" role="progressbar" style="width: @abilities.Level%"
	  aria-valuenow="@abilities.Level" aria-valuemin="0" aria-valuemax="100"></div>
	</div></td>
										<td>
											<div class="d-flex">
																<a class="btn btn-outline-primary" href="/Me/Edit/@abilities.Id">Edit</a>
															<form method="post" action="/Me/Delete/@abilities.Id">
													<button class="btn btn-outline-warning">Delete</button>
												</form>
											</div>

										</td>
									</tr>
							}
						</tbody>
					</table>

				</div>
			</div>
		</div>
	</div>

