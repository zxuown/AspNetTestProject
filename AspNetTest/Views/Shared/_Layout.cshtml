<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="/css/bootstrap-5.0.2-dist/css/bootstrap.css" rel="stylesheet">
    <style>
        .field-validation-error {
            color: red;
            font-size: 18px;
        }
    </style>
    @RenderSection("Styles", required:false)

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/News/Index">Edit news</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Map/Index">Map</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ToDoList/Index">ToDoList</a>
                    </li>
                    @if (!User.Identity.IsAuthenticated)
                    {

                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">Login</a>
                        </li>
                    }

                </ul>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="ml-auto">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                @*<li><a class="dropdown-item" href="#">Profile</a></li>*@
                                @*<li><a class="dropdown-item" href="#">Settings</a></li>*@
                                @*<li><hr class="dropdown-divider"></li>*@
                                <li>
                                    <form method="post" action="/Account/Logout">
                                        <button class="dropdown-item" type="submit">Logout</button>
                                    </form>
                                    @*<a class="dropdown-item" href="/Account/Logout">Logout</a>*@
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </nav>

    @RenderBody()
    <script src="/css/bootstrap-5.0.2-dist/js/bootstrap.bundle.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="js/aboutMe.js"></script>
    @RenderSection("Scripts",required:false)
</body>
</html>